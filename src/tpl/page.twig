{% extends "extends/layout.twig" %}

{% block page %}
<section class="page">

<h1>{{ title }}</h1>

{# You can consume Markdown content from a custom twig filter "md" #}
{{ content|md }}

<h3>The {{ qualities|length > 1 ? qualities|length }} main {{ qualities|length > 1 ? "qualities" : "quality" }} of Twulp :</h3>

<ul>
    {% for quality in qualities %}
        <li>{{ quality }}</li>
    {% endfor %}
</ul>

{% if next|default %}
<a href="{{ next.url }}">{{ next.label }}</a>
{% endif %}

{# You can prepare your responsive picture from data source... #}
{{ photo_rendered }}

{# ... or call the custom twig function #}
{% if photo|default %}
{{ picture(photo.src, photo.alt) }}
{% endif %}

</section>
{% endblock %}