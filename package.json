{
  "name": "gulp-twig-scss",
  "version": "1.0.0",
  "description": "Frontend development made easy using Gulp, Twig.js, Rollup and SASS",
  "main": "gulpfile.js",
  "dependencies": {},
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^9.0.0",
    "browser-sync": "^2.26.12",
    "del": "^5.1.0",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^7.0.1",
    "gulp-clean-css": "^4.3.0",
    "gulp-concat": "^2.6.1",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^4.1.0",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-webp": "^4.0.1",
    "gulp-yaml": "^2.0.4",
    "image-size": "^0.9.1",
    "imagemin": "^7.0.1",
    "marked": "^1.1.1",
    "object-hash": "^2.0.3",
    "rollup": "^2.28.1",
    "rollup-plugin-terser": "^7.0.2",
    "slugify": "^1.4.5",
    "through2": "^4.0.2",
    "twig": "^1.15.2",
    "url-pattern": "^1.0.3",
    "yaml": "^1.10.0"
  },
  "scripts": {},
  "config": {
    "in": "src/twulp.js",
    "out": "www",
    "copy": "src/copy",
    "tpl": "src/tpl",
    "data": "src/data",
    "css": {
      "in": "src/css",
      "out": "www/lib",
      "file": "styles.css"
    },
    "js": {
      "in": "src/js/main.js",
      "out": "www/lib/script.js",
      "watch": "src/js"
    },
    "picture": {
      "in": "src/picture",
      "out": "www/picture",
      "sizes": [
        480,
        768,
        1024,
        1440,
        1920
      ]
    },
    "browsersync": {
      "logLevel": "silent",
      "notify": false,
      "server": {
        "baseDir": "www",
        "serveStaticOptions": {
          "index": "index.html",
          "extensions": [
            "html"
          ]
        }
      },
      "port": "44320"
    }
  }
}
